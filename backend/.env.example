# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# Docker automatically uses service name 'mongo' from docker-compose.yml
MONGODB_URI=mongodb://mongo:27017/roombooking

# Redis Cache
# Docker automatically uses service name 'redis' from docker-compose.yml
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-different-refresh-secret-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Security
BCRYPT_ROUNDS=10

# CORS
# Single origin for local development
CORS_ORIGIN=http://localhost:5173
# For multiple origins (comma-separated) - useful when running mixed Docker/local dev:
# CORS_ORIGIN=http://localhost:5173,http://localhost,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (in seconds)
CACHE_TTL_SECONDS=300
CACHE_TTL_ROOMS=300

# Logging (optional)
LOG_LEVEL=info
